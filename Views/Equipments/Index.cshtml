@model IEnumerable<Tenchex.Models.Equipments>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="SelectEquipment">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Type)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.UnitePrice)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Currency)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Quantities)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.VendorID)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.SupplierId)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.EmployeeId)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Type)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UnitePrice)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Currency)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Quantities)
				</td>
				<td>
					@ViewBag.VendorName[item.VendorID-1]
				</td>
				<td>
					@ViewBag.SupplierName[item.SupplierId-1]
				</td>
				<td>
					@ViewBag.EmployeeName[item.EmployeeId-1]
				</td>
				<td>
					<a asp-action="SelectType" asp-route-id="@item.EquipmentId">Select</a> |
					<a asp-action="Edit" asp-route-id="@item.EquipmentId">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.EquipmentId">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.EquipmentId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
